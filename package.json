{
    "name": "argus-vrt",
    "version": "0.1.0",
    "description": "CLI-based visual regression testing tool with auto-discovery and pixel-accurate diffing",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "argus": "dist/cli/index.js"
    },
    "scripts": {
        "build": "bun build src/cli/index.ts --outdir dist/cli --target bun && bun build src/index.ts --outdir dist --target bun",
        "dev": "bun --watch src/cli/index.ts",
        "start": "bun dist/cli/index.js",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:coverage": "bun test --coverage",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "typecheck": "bun x tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "visual-regression",
        "testing",
        "screenshot",
        "playwright",
        "diff",
        "cli",
        "vrt",
        "bun"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "pixelmatch": "^6.0.0",
        "playwright": "^1.49.0",
        "pngjs": "^7.0.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/pixelmatch": "^5.2.6",
        "@types/pngjs": "^6.0.5",
        "@typescript-eslint/eslint-plugin": "^8.16.0",
        "@typescript-eslint/parser": "^8.16.0",
        "eslint": "^9.15.0",
        "prettier": "^3.4.1",
        "typescript": "^5.7.2"
    },
    "files": [
        "dist",
        "README.md"
    ]
}